<link href="~/Css/site.css" rel="stylesheet" />

<section class="content-header sub_head">
    @ViewBag.PageTitle
    @ViewBag.Breadcrumb
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @ViewBag.btnToolBar
        </div>
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="data-table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>名称</th>
                                <th>方法</th>
                                <th>状态</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
@Html.Partial("_FormModal")


@*<script src="~/plugins/jQuery/jQuery-2.1.4.min.js"></script>*@
<script src="~/Script/wwt.js"></script>
<script>
    var oTable;
    var aoColumns = [
          { "data": "btnName" },
          { "data": "func" },
          { "data": "status" }];
    $(document).ready(function () {
        oTable = InitDatatables($("#data-table"), "@Url.Action("ButtonList")?rand=" + Math.random(), aoColumns, oTable);
    });
    function Add() {
        ShowModal("@Url.Action("ButtonForm")", {}, "添加按钮", 2);
    }
    function Delete() {
        var id = getSelectRow(oTable, "btnId");
        if (id)
            DeleteRecord("@Url.Action("DeleteButton")", { Id: id }, oTable);
    else
            toastr.warning("请选择一条数据");
    }
    function Modify() {
        var id = getSelectRow(oTable, "btnId");
        if (id)
            ShowModal("@Url.Action("ModifyButton")", { Id: id }, "修改按钮", 2);
    else
            toastr.warning("请选择一条数据");
    }
    function Save() {
        SaveModal(oTable);
    }
</script>