<section class="content-header sub_head">
    @ViewBag.PageTitle
    @ViewBag.Breadcrumb
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @ViewBag.btnToolBar
        </div>
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="data-table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>工号</th>
                                <th>姓名</th>
                                <th>职位</th>
                                <th>账号</th>
                                <th>角色</th>
                                <th>所在部门</th>
                                <th>状态</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
@Html.Partial("_FormModal")
<script src="~/Script/mySite.js"></script>
<script>
    var oTable;
    var aoColumns = [
        { "data": "employeNo" },
        { "data": "employeName" },
        { "data": "employePost" },
        { "data": "employeAccount" },
        { "data": "employeNo" },
        { "data": "employeNo" },
        { "data": "status" },
    ];
    $(document).ready(function () {
        oTable = InitDatatables($("#data-table"), "@Url.Action("EmployerList")?rand=" + Math.random(), aoColumns, oTable);
    });
    function Add() {
        ShowModal("@Url.Action("AddEmployer")", {}, "添加员工", 2);
    }
    function Modify() {
        var id = getSelectRow(oTable, "employeID");
        if (id)
            ShowModal("@Url.Action("ModifyEmployer")", { Id: id }, "修改员工", 2);
    else
            toastr.warning("请选择一条数据");
    }
    function Delete() {
        var id = getSelectRow(oTable, "employeID");
        if (id)
            DeleteRecord("@Url.Action("DeleteEmployer")", { Id: id }, oTable);
    else
            toastr.warning("请选择一条数据");
    }
</script>

